<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>프로필 설정 - 법무법인 로연 x 서울대학교</title>
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+KR:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@fortawesome/fontawesome-free@6.4.0/css/all.min.css">
    <link rel="stylesheet" href="css/ui-components.css">
    <script src="https://cdn.jsdelivr.net/npm/signature_pad@4.1.7/dist/signature_pad.umd.min.js"></script>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Noto Sans KR', sans-serif;
            background: linear-gradient(135deg, #1D2088 0%, #151A66 100%);
            min-height: 100vh;
            padding: 20px;
        }

        .container {
            max-width: 700px;
            margin: 0 auto;
        }

        .header {
            background: white;
            border-radius: 20px;
            padding: 30px;
            margin-bottom: 20px;
            text-align: center;
            box-shadow: 0 10px 30px rgba(0,0,0,0.2);
        }

        .header h1 {
            font-size: 24px;
            color: #1D2088;
            margin-bottom: 8px;
        }

        .header p {
            color: #6b7280;
            font-size: 14px;
        }

        .progress-bar {
            background: white;
            border-radius: 15px;
            padding: 20px;
            margin-bottom: 20px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.2);
        }

        .progress-steps {
            display: flex;
            justify-content: space-between;
            align-items: center;
            position: relative;
        }

        .progress-line {
            position: absolute;
            top: 20px;
            left: 10%;
            right: 10%;
            height: 3px;
            background: #e5e7eb;
            z-index: 0;
        }

        .progress-line-fill {
            height: 100%;
            background: linear-gradient(135deg, #1D2088 0%, #151A66 100%);
            transition: width 0.5s ease;
            width: 0%;
        }

        .step {
            position: relative;
            z-index: 1;
            text-align: center;
            flex: 1;
        }

        .step-circle {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background: #e5e7eb;
            color: #9ca3af;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 8px;
            font-weight: 600;
            transition: all 0.3s ease;
        }

        .step.active .step-circle {
            background: linear-gradient(135deg, #1D2088 0%, #151A66 100%);
            color: white;
            box-shadow: 0 4px 15px rgba(0, 122, 51, 0.4);
        }

        .step.completed .step-circle {
            background: #10b981;
            color: white;
        }

        .step-label {
            font-size: 12px;
            color: #6b7280;
            font-weight: 500;
        }

        .form-container {
            background: white;
            border-radius: 20px;
            padding: 40px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.2);
            animation: fadeInUp 0.6s ease;
        }

        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .form-section {
            margin-bottom: 30px;
        }

        .form-section h3 {
            font-size: 18px;
            color: #2c3e50;
            margin-bottom: 20px;
            padding-bottom: 10px;
            border-bottom: 2px solid #f3f4f6;
        }

        .form-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 20px;
        }

        .form-grid.full {
            grid-template-columns: 1fr;
        }

        .form-group {
            margin-bottom: 0;
        }

        .form-group label {
            display: block;
            margin-bottom: 8px;
            font-weight: 500;
            color: #374151;
            font-size: 14px;
        }

        .form-group label .required {
            color: #ef4444;
            margin-left: 2px;
        }

        .form-group label .optional {
            color: #9ca3af;
            font-size: 12px;
            margin-left: 5px;
        }

        .form-group input, .form-group select {
            width: 100%;
            padding: 12px 14px;
            border: 2px solid #e5e7eb;
            border-radius: 10px;
            font-size: 14px;
            transition: all 0.3s ease;
        }

        .form-group input:focus, .form-group select:focus {
            outline: none;
            border-color: #1D2088;
            box-shadow: 0 0 0 3px rgba(0, 122, 51, 0.1);
        }

        .form-group input:disabled {
            background: #f9fafb;
            color: #6b7280;
            cursor: not-allowed;
        }

        .help-text {
            font-size: 12px;
            color: #6b7280;
            margin-top: 5px;
        }

        .signature-container {
            border: 2px solid #e5e7eb;
            border-radius: 10px;
            padding: 15px;
            background: #f9fafb;
        }

        .signature-pad-wrapper {
            position: relative;
            border-radius: 8px;
            background: white;
            min-height: 200px;
        }

        #signaturePad {
            display: block;
            width: 100%;
            height: 200px;
            cursor: crosshair;
            touch-action: none;
            border: 1px solid #e5e7eb;
            border-radius: 8px;
        }

        .signature-actions {
            display: flex;
            gap: 10px;
            margin-top: 10px;
        }

        .btn-clear {
            padding: 8px 16px;
            background: #f3f4f6;
            border: 2px solid #e5e7eb;
            border-radius: 8px;
            cursor: pointer;
            font-size: 13px;
            font-weight: 600;
            color: #374151;
            transition: all 0.3s ease;
        }

        .btn-clear:hover {
            background: #e5e7eb;
        }

        .button-group {
            display: flex;
            gap: 15px;
            margin-top: 30px;
        }

        .btn {
            flex: 1;
            padding: 16px;
            border: none;
            border-radius: 12px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .btn-primary {
            background: linear-gradient(135deg, #1D2088 0%, #151A66 100%);
            color: white;
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 25px rgba(0, 122, 51, 0.4);
        }

        .btn-secondary {
            background: #f3f4f6;
            color: #374151;
        }

        .btn-secondary:hover {
            background: #e5e7eb;
        }

        .info-banner {
            background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
            border: 2px solid #fbbf24;
            border-radius: 12px;
            padding: 15px;
            margin-bottom: 25px;
            display: flex;
            gap: 12px;
            align-items: start;
        }

        .info-banner i {
            color: #d97706;
            font-size: 20px;
            margin-top: 2px;
        }

        .info-banner-content h4 {
            font-size: 15px;
            color: #78350f;
            margin-bottom: 5px;
        }

        .info-banner-content p {
            font-size: 13px;
            color: #92400e;
            line-height: 1.5;
        }

        @media (max-width: 768px) {
            .form-container {
                padding: 30px 20px;
            }

            .form-grid {
                grid-template-columns: 1fr;
            }

            .button-group {
                flex-direction: column-reverse;
            }

            .step-label {
                font-size: 10px;
            }

            .step-circle {
                width: 35px;
                height: 35px;
                font-size: 14px;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>프로필 설정 - 서울대학교</h1>
            <p>법무법인 로연 출입국이민지원센터</p>
        </div>

        <div class="progress-bar">
            <div class="progress-steps">
                <div class="progress-line">
                    <div class="progress-line-fill" id="progressFill"></div>
                </div>
                <div class="step active" data-step="1">
                    <div class="step-circle">1</div>
                    <div class="step-label">기본정보</div>
                </div>
                <div class="step" data-step="2">
                    <div class="step-circle">2</div>
                    <div class="step-label">학적정보</div>
                </div>
                <div class="step" data-step="3">
                    <div class="step-circle">3</div>
                    <div class="step-label">체류정보</div>
                </div>
            </div>
        </div>

        <div class="form-container">
            <div class="info-banner">
                <i class="fas fa-info-circle"></i>
                <div class="info-banner-content">
                    <h4>안전한 정보 관리</h4>
                    <p>입력하신 모든 정보는 암호화되어 안전하게 보관되며, 비자 상담 및 민원 대행 서비스 제공 목적으로만 사용됩니다.</p>
                </div>
            </div>

            <form id="profileForm">
                <!-- Step 1: 기본정보 -->
                <div class="form-step active" id="step1">
                    <div class="form-section">
                        <h3><i class="fas fa-user"></i> 기본 정보</h3>
                        <div class="form-grid">
                            <div class="form-group">
                                <label>이메일 <span class="required">*</span></label>
                                <input type="email" id="email" disabled>
                            </div>
                            <div class="form-group">
                                <label>성명 (여권 영문명) <span class="required">*</span></label>
                                <input type="text" id="fullName" placeholder="HONG Gildong" required>
                                <div class="help-text">여권에 표기된 영문명을 정확히 입력하세요</div>
                            </div>
                        </div>
                        <div class="form-grid">
                            <div class="form-group">
                                <label>국적 <span class="required">*</span></label>
                                <select id="nationality" required>
                                    <option value="">국적을 선택하세요</option>
                                    <option value="중국">중국 (China)</option>
                                    <option value="베트남">베트남 (Vietnam)</option>
                                    <option value="일본">일본 (Japan)</option>
                                    <option value="미국">미국 (USA)</option>
                                    <option value="캐나다">캐나다 (Canada)</option>
                                    <option value="호주">호주 (Australia)</option>
                                    <option value="몽골">몽골 (Mongolia)</option>
                                    <option value="우즈베키스탄">우즈베키스탄 (Uzbekistan)</option>
                                    <option value="인도네시아">인도네시아 (Indonesia)</option>
                                    <option value="태국">태국 (Thailand)</option>
                                    <option value="기타">기타 (Other)</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label>여권번호 <span class="required">*</span></label>
                                <input type="text" id="passportNumber" placeholder="M12345678" required>
                                <div class="help-text">여권에 표기된 번호를 정확히 입력하세요</div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Step 2: 학적정보 -->
                <div class="form-step" id="step2" style="display: none;">
                    <div class="form-section">
                        <h3><i class="fas fa-university"></i> 학적 정보</h3>
                        <div class="form-grid">
                            <div class="form-group">
                                <label>소속 대학교 <span class="required">*</span></label>
                                <input type="text" id="university" value="서울대학교" disabled>
                            </div>
                            <div class="form-group">
                                <label>학번 <span class="required">*</span></label>
                                <input type="text" id="studentNumber" placeholder="2020123456" required>
                            </div>
                        </div>
                        <div class="form-grid">
                            <div class="form-group">
                                <label>전공 <span class="optional">(선택)</span></label>
                                <input type="text" id="major" placeholder="컴퓨터공학과">
                            </div>
                            <div class="form-group">
                                <label>졸업 예정 <span class="required">*</span></label>
                                <select id="expectedGraduation" required>
                                    <option value="">선택하세요</option>
                                    <option value="2025-02">2025년 2월</option>
                                    <option value="2025-08">2025년 8월</option>
                                    <option value="2026-02">2026년 2월</option>
                                    <option value="2026-08">2026년 8월</option>
                                    <option value="2027-02">2027년 2월</option>
                                    <option value="2027-08">2027년 8월</option>
                                    <option value="2028-02">2028년 2월</option>
                                    <option value="2028-08">2028년 8월</option>
                                    <option value="2029-02">2029년 2월</option>
                                    <option value="2029-08">2029년 8월</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Step 3: 체류정보 + 서명 -->
                <div class="form-step" id="step3" style="display: none;">
                    <div class="form-section">
                        <h3><i class="fas fa-id-card"></i> 체류 정보</h3>
                        <div class="form-grid">
                            <div class="form-group">
                                <label>현재 체류자격 <span class="required">*</span></label>
                                <select id="currentVisa" required>
                                    <option value="">체류자격을 선택하세요</option>
                                    <option value="D-2">D-2 (유학)</option>
                                    <option value="D-4">D-4 (일반연수)</option>
                                    <option value="기타">기타</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label>외국인등록번호 <span class="optional">(선택)</span></label>
                                <input type="text" id="arcNumber" placeholder="123456-7890123" maxlength="14">
                                <div class="help-text">외국인등록증이 있는 경우에만 입력</div>
                            </div>
                        </div>
                    </div>

                    <div class="form-section">
                        <h3><i class="fas fa-signature"></i> 서명 (통합신청서용)</h3>
                        <div class="signature-container">
                            <div class="signature-pad-wrapper" id="signatureWrapper">
                                <canvas id="signaturePad" width="600" height="200"></canvas>
                            </div>
                            <div class="signature-actions">
                                <button type="button" class="btn-clear" onclick="clearSignature()">
                                    <i class="fas fa-eraser"></i> 서명 지우기
                                </button>
                                <div class="help-text" style="margin-left: auto; align-self: center;">
                                    위 영역에 손가락이나 마우스로 서명해주세요
                                </div>
                            </div>
                            <div id="signatureStatus" style="font-size: 12px; color: #6b7280; margin-top: 5px;"></div>
                        </div>
                    </div>

                    <div class="info-banner" style="background: linear-gradient(135deg, #d1f4e0 0%, #a7e6c0 100%); border-color: #1D2088;">
                        <i class="fas fa-gift" style="color: #1D2088;"></i>
                        <div class="info-banner-content">
                            <h4 style="color: #151A66;">2026년 2월 졸업 예정자 무료 혜택!</h4>
                            <p style="color: #1D2088;">D-10, E-7 비자 사전진단 서비스를 무료로 받으실 수 있습니다.</p>
                        </div>
                    </div>
                </div>

                <div class="button-group">
                    <button type="button" class="btn btn-secondary" id="prevBtn" onclick="prevStep()" style="display: none;">
                        <i class="fas fa-arrow-left"></i> 이전
                    </button>
                    <button type="button" class="btn btn-primary" id="nextBtn" onclick="nextStep()">
                        다음 <i class="fas fa-arrow-right"></i>
                    </button>
                    <button type="submit" class="btn btn-primary" id="submitBtn" style="display: none;">
                        <i class="fas fa-check"></i> 완료
                    </button>
                </div>
            </form>
        </div>
    </div>

    <script src="js/ui-components.js"></script>
    <script>
        let currentStep = 1;
        const totalSteps = 3;
        let signaturePad = null;

        // 사용자 정보 로드
        window.addEventListener('DOMContentLoaded', function() {
            const currentUser = JSON.parse(localStorage.getItem('currentUser'));
            if (!currentUser || currentUser.userType !== 'student') {
                window.location.href = 'visa-login-snu.html';
                return;
            }

            // 이메일 자동 입력
            document.getElementById('email').value = currentUser.email;

            // Signature Pad는 Step 3이 표시될 때 초기화
            console.log('DOMContentLoaded - Ready to initialize signature pad when Step 3 is shown');
        });

        // Signature Pad 초기화 - 간단하고 확실한 방법
        function initSignaturePad() {
            try {
                const canvas = document.getElementById('signaturePad');
                const statusDiv = document.getElementById('signatureStatus');
                
                if (!canvas) {
                    console.error('Canvas element not found');
                    if (statusDiv) statusDiv.textContent = '❌ 서명 패드를 찾을 수 없습니다.';
                    return;
                }

                // SignaturePad 라이브러리 확인
                if (typeof SignaturePad === 'undefined') {
                    console.error('SignaturePad library not loaded');
                    if (statusDiv) statusDiv.textContent = '❌ 서명 라이브러리를 로드하지 못했습니다.';
                    showToast('서명 기능을 로드하는 중 오류가 발생했습니다. 페이지를 새로고침해주세요.', 'error');
                    return;
                }

                // 캔버스 크기를 wrapper에 맞춤
                const wrapper = document.getElementById('signatureWrapper');
                const rect = wrapper.getBoundingClientRect();
                canvas.width = rect.width;
                canvas.height = 200;

                // SignaturePad 초기화
                signaturePad = new SignaturePad(canvas, {
                    backgroundColor: 'rgb(255, 255, 255)',
                    penColor: 'rgb(0, 0, 0)',
                    minWidth: 1,
                    maxWidth: 3
                });

                // 이벤트 리스너 추가하여 서명 시작 감지
                signaturePad.addEventListener('beginStroke', function() {
                    if (statusDiv) statusDiv.textContent = '✓ 서명이 기록되고 있습니다.';
                });

                signaturePad.addEventListener('endStroke', function() {
                    if (statusDiv) statusDiv.textContent = '✓ 서명 완료';
                });

                console.log('✓ SignaturePad initialized successfully');
                if (statusDiv) statusDiv.textContent = '✓ 서명 패드가 준비되었습니다. 위 영역에 서명해주세요.';
                
            } catch (error) {
                console.error('Error initializing SignaturePad:', error);
                const statusDiv = document.getElementById('signatureStatus');
                if (statusDiv) statusDiv.textContent = '❌ 오류: ' + error.message;
            }
        }

        // 서명 지우기
        function clearSignature() {
            if (signaturePad) {
                signaturePad.clear();
                const statusDiv = document.getElementById('signatureStatus');
                if (statusDiv) statusDiv.textContent = '✓ 서명이 지워졌습니다. 다시 서명해주세요.';
                console.log('Signature cleared');
            } else {
                console.error('signaturePad not initialized');
                showToast('서명 패드가 초기화되지 않았습니다.', 'error');
            }
        }

        // 다음 단계
        function nextStep() {
            if (!validateCurrentStep()) {
                return;
            }

            if (currentStep < totalSteps) {
                document.getElementById('step' + currentStep).style.display = 'none';
                document.querySelector(`.step[data-step="${currentStep}"]`).classList.remove('active');
                document.querySelector(`.step[data-step="${currentStep}"]`).classList.add('completed');
                document.querySelector(`.step[data-step="${currentStep}"] .step-circle`).innerHTML = '<i class="fas fa-check"></i>';

                currentStep++;
                document.getElementById('step' + currentStep).style.display = 'block';
                document.querySelector(`.step[data-step="${currentStep}"]`).classList.add('active');

                // Step 3으로 이동 시 서명 패드 초기화
                if (currentStep === 3 && !signaturePad) {
                    setTimeout(() => {
                        initSignaturePad();
                    }, 100);
                }

                document.getElementById('prevBtn').style.display = 'flex';
                
                if (currentStep === totalSteps) {
                    document.getElementById('nextBtn').style.display = 'none';
                    document.getElementById('submitBtn').style.display = 'flex';
                }

                updateProgressBar();
                window.scrollTo(0, 0);
            }
        }

        // 이전 단계
        function prevStep() {
            if (currentStep > 1) {
                document.getElementById('step' + currentStep).style.display = 'none';
                document.querySelector(`.step[data-step="${currentStep}"]`).classList.remove('active');

                currentStep--;
                document.getElementById('step' + currentStep).style.display = 'block';
                document.querySelector(`.step[data-step="${currentStep}"]`).classList.remove('completed');
                document.querySelector(`.step[data-step="${currentStep}"]`).classList.add('active');
                document.querySelector(`.step[data-step="${currentStep}"] .step-circle`).textContent = currentStep;

                document.getElementById('nextBtn').style.display = 'flex';
                document.getElementById('submitBtn').style.display = 'none';

                if (currentStep === 1) {
                    document.getElementById('prevBtn').style.display = 'none';
                }

                updateProgressBar();
                window.scrollTo(0, 0);
            }
        }

        // 프로그레스 바 업데이트
        function updateProgressBar() {
            const progress = ((currentStep - 1) / (totalSteps - 1)) * 100;
            document.getElementById('progressFill').style.width = progress + '%';
        }

        // 현재 단계 검증
        function validateCurrentStep() {
            const stepElement = document.getElementById('step' + currentStep);
            const inputs = stepElement.querySelectorAll('input[required], select[required]');
            
            for (let input of inputs) {
                if (!input.value.trim()) {
                    showToast('모든 필수 항목을 입력해주세요.', 'warning');
                    input.focus();
                    return false;
                }
            }

            // Step 3에서 서명 검증
            if (currentStep === 3) {
                if (!signaturePad) {
                    showToast('서명 패드를 초기화하는 중입니다. 잠시 후 다시 시도해주세요.', 'warning');
                    return false;
                }
                if (signaturePad.isEmpty()) {
                    showToast('서명을 작성해주세요.', 'warning');
                    return false;
                }
            }

            return true;
        }

        // 폼 제출
        document.getElementById('profileForm').addEventListener('submit', async function(event) {
            event.preventDefault();

            if (!validateCurrentStep()) {
                return;
            }

            const loadingBtn = new LoadingButton(document.getElementById('submitBtn'));
            loadingBtn.setLoading('저장 중...');

            const currentUser = JSON.parse(localStorage.getItem('currentUser'));
            
            // 졸업 예정일 가져오기
            const expectedGraduation = document.getElementById('expectedGraduation').value;

            // 서명 데이터 저장
            if (!signaturePad || signaturePad.isEmpty()) {
                showToast('서명을 작성해주세요.', 'warning');
                loadingBtn.reset();
                return;
            }
            const signatureData = signaturePad.toDataURL('image/png');
            
            const profileData = {
                id: currentUser.id,
                email: document.getElementById('email').value,
                full_name: document.getElementById('fullName').value,
                nationality: document.getElementById('nationality').value,
                passport_number: document.getElementById('passportNumber').value,
                university_id: 'UNI_SNU',
                university_name: '서울대학교',
                student_number: document.getElementById('studentNumber').value,
                major: document.getElementById('major').value,
                expected_graduation: expectedGraduation,
                current_visa: document.getElementById('currentVisa').value,
                arc_number: document.getElementById('arcNumber').value,
                signature: signatureData,
                profile_completed: true
            };

            setTimeout(() => {
                currentUser.profileCompleted = true;
                currentUser.profileData = profileData;
                localStorage.setItem('currentUser', JSON.stringify(currentUser));
                localStorage.setItem('studentProfile', JSON.stringify(profileData));

                loadingBtn.setSuccess('완료!');
                showToast('프로필이 성공적으로 저장되었습니다!', 'success', 2000);

                setTimeout(() => {
                    window.location.href = 'visa-dashboard-snu.html';
                }, 2000);
            }, 1500);
        });

        // 외국인등록번호 자동 포맷팅
        document.getElementById('arcNumber').addEventListener('input', function(e) {
            let value = e.target.value.replace(/[^0-9]/g, '');
            if (value.length > 6) {
                value = value.slice(0, 6) + '-' + value.slice(6, 13);
            }
            e.target.value = value;
        });
    </script>
</body>
</html>
